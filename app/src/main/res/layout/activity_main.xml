<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white_ios"
        tools:context=".MainActivity">

        <Button
            android:id="@+id/buttonFlutter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="80dp"
            android:layout_marginTop="32dp"

            android:backgroundTint="#009DCE"
            android:paddingHorizontal="23dp"
            android:paddingVertical="12dp"
            android:text="Product Detail"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textSize="30sp"
            app:cornerRadius="25dp"
            app:layout_constraintBottom_toTopOf="@+id/buttonFlutter2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/buttonFlutter2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="80dp"

            android:layout_marginBottom="32dp"
            android:backgroundTint="#009DCE"
            android:paddingHorizontal="23dp"
            android:paddingVertical="12dp"
            android:text="My Discount"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textSize="30sp"
            app:cornerRadius="25dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/buttonFlutter" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>